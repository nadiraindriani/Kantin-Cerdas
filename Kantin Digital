            <!-- Dashboard Penjual -->
            <div id="seller-dashboard" class="hidden">
                <h2 class="text-3xl font-bold mb-6">Dashboard Penjual</h2>
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <div class="lg:col-span-2">
                        <h3 class="text-2xl font-semibold mb-4">Kelola Pesanan Masuk</h3>
                        <div id="seller-orders-list" class="order-card-grid gap-4"></div>
                    </div>
                    <div class="lg:col-span-1">
                        <div class="bg-white p-6 rounded-xl shadow-lg sticky top-24">
                            <h3 class="text-2xl font-semibold mb-4">Tambah Menu Baru</h3>
                            <form id="add-menu-form" class="space-y-4">
                                <div>
                                    <label for="menu-name" class="text-sm font-medium">Nama Menu</label>
                                    <input type="text" id="menu-name" class="w-full mt-1 px-3 py-2 border rounded-lg" required>
                                </div>
                                <div>
                                    <label for="menu-price" class="text-sm font-medium">Harga (Rp)</label>
                                    <input type="number" id="menu-price" class="w-full mt-1 px-3 py-2 border rounded-lg" required>
                                </div>
                                <div>
                                    <label for="menu-stock" class="text-sm font-medium">Stok</label>
                                    <input type="number" id="menu-stock" class="w-full mt-1 px-3 py-2 border rounded-lg" required>
