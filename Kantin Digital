                 <div class="mt-8 bg-white p-6 rounded-xl shadow-lg">
                    <h3 class="font-bold text-xl mb-4">Daftar Menu Anda</h3>
                    <div id="seller-menu-list" class="dashboard-grid gap-6"></div>
                </div>
            </div>

            <!-- Dashboard Siswa -->
            <div id="student-dashboard" class="hidden">
                 <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                     <div class="lg:col-span-2">
                        <h2 class="text-3xl font-bold mb-6">Pilih Menu Hari Ini</h2>
                        <div id="menu-list" class="dashboard-grid gap-6">
                            <!-- Kartu menu akan dirender di sini -->
                        </div>
                     </div>
                      <div class="lg:col-span-1">
                        <div class="bg-white p-6 rounded-xl shadow-lg sticky top-24">
                            <h3 class="text-2xl font-semibold mb-4 flex items-center"><i class="fa-solid fa-cart-shopping mr-3"></i>Keranjang Anda</h3>
                            <div id="cart-items" class="space-y-4 max-h-60 overflow-y-auto pr-2"></div>
                            <div id="cart-empty" class="text-center py-8 text-gray-500">
                                <i class="fa-solid fa-cart-arrow-down text-4xl mb-2"></i>
                                <p>Keranjang masih kosong</p>
                            </div>
                            <div id="cart-summary" class="hidden mt-6 pt-4 border-t">
                                <div class="flex justify-between font-bold text-lg mb-4">
                                    <span>Total:</span>
                                    <span id="cart-total">Rp 0</span>
                                </div>
                                <div>
                                    <label for="order-notes" class="text-sm font-medium">Catatan Pesanan (opsional)</label>
                                    <textarea id="order-notes" rows="2" class="w-full mt-1 px-3 py-2 border rounded-lg" placeholder="Contoh: Jangan pakai saus"></textarea>
                                </div>
                                <div class="mt-4">
                                      <label class="text-sm font-medium">Opsi Pengambilan</label>
                                      <div class="flex space-x-4 mt-2">
                                           <label class="flex items-center">
                                               <input type="radio" name="delivery-option" value="Diambil" class="form-radio" checked>
                                               <span class="ml-2">Diambil Sendiri</span>
                                           </label>
                                           <label class="flex items-center">
                                               <input type="radio" name="delivery-option" value="Diantar" class="form-radio">
                                               <span class="ml-2">Diantar ke Kelas</span>
                                           </label>
                                      </div>
                                </div>
